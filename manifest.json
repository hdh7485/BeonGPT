{
  "manifest_version": 3,
  "name": "Text Translator",
  "version": "1.0",
  "description": "Translate selected English text to Korean using ChatGPT API.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
